[user]
	name = <User Name>
	email = <user.email>@nuecho.com
[core]
	excludesfile = c:/Users/<home>/.gitignoreglobal
	eol = native
	autocrlf = false
	longpaths = true
[merge]
	tool = tortoisemerge
	renormalize = true
[rerere]
	enabled = 1
[push]
	default = simple
[help]
	autocorrect = 1
[color]
	ui = always
    branch = always
    diff = always
    interactive = always
    status = always
[gui]
	encoding = utf-8
