# Dynamic Environment

EXTRA_PATH=""

## Git Flow
source "${GITFLOW_ROOT}/git-flow-completion/git-flow-completion.bash"

## Gradle
export GRADLE_USER_HOME="${HOME}/.gradle"

## Java
export JAVA_HOME="${JAVA_ROOT}"

export JAVA8_HOME="/c/Local/Java/1.8.0_11"
export JDK8_HOME="/c/Local/Java/1.8.0_11"

## Node
if which npm >/dev/null; then  
  export NODE_VERSION="`node.exe -v | sed 's/^v//'`"
  export NPM_ROOT=${NPM_ROOT:="${HOME}/.npm/${NODE_VERSION}"}
  export NODE_PATH="`cygpath -wa ${NPM_ROOT}/node_modules`"
  
  EXTRA_PATH+=":${NPM_ROOT}"
fi

## Ruby
if which gem >/dev/null; then
  export GEM_ROOT="`cygpath -wa $(ruby -rubygems -e 'puts Gem.user_dir')`"
  
  EXTRA_PATH+=":`cygpath -ua ${GEM_ROOT}`/bin"
fi

export PATH="${PREPEND_PATH}${EXTRA_PATH}:${SYSTEM_PATH}"

